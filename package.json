{
  "name": "better-folding",
  "displayName": "Better Folding",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Better Folding",
      "properties": {
        "better-folding.foldClosingBrackets": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Include closing brackets like `}` and `]` in the folding range."
        },
        "better-folding.collapsedTextStrategy": {
          "type": "string",
          "default": "ellipsis",
          "enum": [
            "ellipsis",
            "count body lines"
          ],
          "markdownEnumDescriptions": [
            "`…` (ellipsis) character. Example: `{…}`.",
            "Counts the number of lines folded, excluding the closing bracket line. Example: `{ ⋯ 2 lines ⋯ }`."
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.32.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "prettier": "2.8.2"
  },
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^5.48.1",
    "json5": "^2.2.3",
    "typescript": "^4.9.4"
  }
}
